<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="100dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/bg_incoming_bubble"
    android:padding="10dp">

    <TextView
        android:id="@+id/nameTvR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Name"
        android:textColor="@color/purple_500"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/messageTvR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The message"
        android:textColor="@color/black"
        android:layout_below="@+id/nameTvR"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/timeTvR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/messageTvR"
        android:layout_marginEnd="5dp"
        android:textSize="12sp"/>






</RelativeLayout>